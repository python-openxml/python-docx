doc = Document()

# Title
doc.add_heading('MCQs and True/False Questions on Herbal Medicines', 0)

# Add MCQs
doc.add_heading('Multiple-Choice Questions (MCQs)', level=1)
for i, mcq in enumerate(mcqs, 1):
    doc.add_paragraph(f"{i}. {mcq['question']}")
    for option in mcq['options']:
